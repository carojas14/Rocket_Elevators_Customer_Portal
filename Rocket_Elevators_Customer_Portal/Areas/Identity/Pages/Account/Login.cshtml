@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}





<body class="bg-light bg-gradient">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image" ><img src="~/image/logoM.jpg" style="width:540px"/></div>
                            <div class="col-lg-6 align-self-center">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Rocket Elevators Customer Portal</h1>
                                        <hr>
                                        <h4>@ViewData["Title"]</h4>
                                    </div>
                                    <form class="user" id="account" method="post">
                                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group mb-3">
                                            <input asp-for="Input.Email" class="form-control" style="border-radius:10rem; padding:1rem;"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                    autocomplete="username" aria-required="true"
                                                   placeholder="Email Address...">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <input asp-for="Input.Password" class="form-control form-control-user" 
                                                   id="exampleInputPassword" placeholder="Password" style="border-radius:10rem; padding:1rem;"
                                                   autocomplete="current-password" aria-required="true">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <button id="login-submit" type="submit" class="btn btn-primary btn-user btn-block">
                                            Login
                                        </button>
                                                                          
                                    </form>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>


</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
